extends layout

block content
  if error
    h2 Error
    p(class="error") #{error.message}
  form(action="/books/" + book.id, method="post")
    p 
    label(for="title") Title
    input(type="text" id="title", name="title" value=book.title)
    p
      label(for="author") Author
      input(type="text" id="author", name="author" value=book.author)
    p
      label(for="genre") Genre
      input(type="text" id="genre", name="genre" value=book.genre)
    p
      label(for="year") Year
      input(type="text" id="year", name="year" value=book.year)
    p
      input(type="submit" value="Update Book")
  form(action=`/books/${book.id}/delete`, method="post", onsubmit="return confirm('Do you really want to delete the book?');")
    p 
      a(class="button" href="/books") Cancel
    p
    input(type="submit" value="Delete Book")